<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @project.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @project.content %>
</p>

<p>
  <strong>User:</strong>
  <%= link_to @project.user.username, @project.user %>
</p>
<% if @project.user_id == current_user.id %>
  <%= link_to 'Edit', edit_project_path(@project) %>
  <%= link_to "Add new version", new_project_version_path(@project) %>
<% end %>
<h1>Versions</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project.versions.each do |version| %>
      <tr>
        <td><%= version.title %></td>
        <td><%= version.content %></td>
        <td><%= version.project.title %></td>
        <td><%= link_to 'Show', project_version_path(version) %></td>
        <td><%= link_to 'Edit', edit_project_version_path(version) %></td>
        <td><%= link_to 'Destroy', project_version_path(@project, version), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

