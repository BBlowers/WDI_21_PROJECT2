<p id="notice"><%= notice %></p>
<%= link_to 'New Project', new_project_path %>
<h1>Projects</h1>

<div class="rows">
  <div class="card-deck-wrapper">
    <div class="card-deck">
<% @projects.each do |project| %>
  <div class="card card-inverse">    
    <%= link_to (image_tag Image.find_by_id(Version.find_by_id(project.current_version_id).main_image_id).image_src, class: "card-img"), project_path(project) %>
    <div class="card-img-overlay">
      <h4 class="card-title"><%= link_to project.title, project_path(project) %></h4>
    </div>
  </div>
<% end %>
</div>
</div>
</div>

<div class="form-group">
<input id="search" class="form-control" name="filter" placeholder="Search">